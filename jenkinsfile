pipeline{
    agent{
        docker{
            image "postman/newman"
            args '--entrypoint=""'
        }
    }
    stages{
        stage('verifier la version de newman'){
            steps{
                sh "newman --version"
                   }
        }
        stage('test api'){
            steps{
                sh 'newman run collections/collectionfastapi8001.json -r cli,junit --reporter-junit-export="newman-report.xml"'
            }
        }
    }
}