pipeline {
    agent {
        docker {
            image "postman/newman"
            args "--entrypoint=''" 
        }
    }

    stages {
        stage('Test API') {
            steps {
                sh 'newman run collections/collection1.json'
            }
        }

        stage('Génération des rapports') {
            steps {
                sh 'newman run collections/collection1.json -r cli,junit --reporter-junit-export="newman-report.xml"'
                archiveArtifacts(artifacts: 'newman-report.html')
            }
        }
    }

    post {
        always {
            junit 'newman-report.xml'
            archiveArtifacts artifacts: '*.html'
        }
    }
}