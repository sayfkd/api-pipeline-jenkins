pipeline{
    agent{
        docker{
            image "postman/newman"
            args '--entrypoint=""'
        }
    }
    triggers { upstream(upstreamProjects: 'fastapi', threshold: hudson.model.Result.SUCCESS) }
    stages{
        stage('verifier la version de newman'){
            steps{
                sh "newman --version"
                   }
        }
    stage('verifier la connection'){
        steps {
        sh '''
           sh "wget --spider http://host.docker.internal:8001/ || echo 'API inaccessible'"
        '''
    }
    }
        stage('test api'){
            steps{
                sh 'newman run collections/collection1.json'
            }
        }
    }
}